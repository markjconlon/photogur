<h2>(<%= @pictures.length %>) Total</h2>

<%= link_to "New Picture", "/pictures/new", class: "new_picture" %>
  <% @pictures.each do |picture| %>
  <div class="post">
    <p><%= picture.title %></p>
    <p class="artist_name"><%= picture.artist %></p>
    <%= link_to image_tag(picture.url, class: "picture"), picture %>
  </div>
  <% end %>
